<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% completed = task.completed ? "[X]" : "[ ]" %>
  <p><%= completed %> <%= link_to task.title, task_path(task) %></p>
  <%= link_to "Delete task",
    task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Add a new task", tasks_new_path  %>
